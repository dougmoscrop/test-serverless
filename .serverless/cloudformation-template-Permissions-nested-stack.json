{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "PermissionsNestedStack nested stack",
  "Parameters": {
    "ApiGatewayRestApiParameter": {
      "Type": "String"
    },
    "MyFunctionLambdaFunctionArnParameter": {
      "Type": "String"
    }
  },
  "Resources": {
    "MyFunctionLambdaPermissionApiGateway": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Ref": "MyFunctionLambdaFunctionArnParameter"
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "apigateway.amazonaws.com",
        "SourceArn": {
          "Fn::Join": [
            "",
            [
              "arn:",
              {
                "Ref": "AWS::Partition"
              },
              ":execute-api:",
              {
                "Ref": "AWS::Region"
              },
              ":",
              {
                "Ref": "AWS::AccountId"
              },
              ":",
              {
                "Ref": "ApiGatewayRestApiParameter"
              },
              "/*/*"
            ]
          ]
        }
      },
      "DependsOn": []
    }
  },
  "Outputs": {}
}